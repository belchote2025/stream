{
    "name": "urrestv/streaming-platform",
    "description": "Netflix-style streaming platform",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Developer",
            "email": "dev@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-mysqli": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpmd/phpmd": "^2.11"
    },
    "autoload": {
        "psr-4": {
            "UrresTv\\": "app/"
        },
        "files": [
            "includes/config.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "UrresTv\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html=coverage",
        "lint": "phpcs --standard=PSR12 app/ includes/ api/",
        "lint:fix": "phpcbf --standard=PSR12 app/ includes/ api/",
        "analyze": "phpmd app/,includes/,api/ text codesize,unusedcode,naming"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}